<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#74525F"
    tools:context="com.enable.android.interact.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Express yourself"
        android:textColor="#ffffff"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="38dp"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="cursive"
        android:text="Connect now"
        android:textColor="#ffffff"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/voice"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:backgroundTint="#D49E99"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_voice"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="342dp"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/bluetooth"
        android:layout_alignEnd="@+id/textView2"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/write"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:clickable="true"
        app:backgroundTint="#D49E99"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_write"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="286dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/voice"
        android:layout_alignStart="@+id/bluetooth"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bluetooth"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:clickable="true"
        app:backgroundTint="#D49E99"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_bluetooth"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="136dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camera"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:clickable="true"
        app:backgroundTint="#D49E99"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_camera"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="397dp"
        android:layout_alignTop="@+id/write"
        android:layout_alignStart="@+id/voice"/>

</RelativeLayout>
